{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "America/New_York",
  "separateMinorPatch": true,
  "dockerfile": {
    "enabled": true
  },
  "baseBranches": [
    "main",
    "release/DOT"
  ],
  "extends": ["config:recommended", ":dependencyDashboard"],
  "additionalBranchPrefix": "{{parentDir}}-",
  "regexManagers": [
    {
      "fileMatch": [
        "^cicd/dockerfiles/Dockerfile.test$"
      ],
      "matchStrings": [
          "# depName=(?<depName>.*?)\\n.*@(?<currentValue>.*?)\\n"

      ],
      "datasourceTemplate": "go"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "matchDatasources": [
        "go"
      ],
      "groupName": "kubernetes packages",
      "groupSlug": "kubernetes-go",
      "matchPackagePrefixes": [
        "k8s.io"
      ],
      "enabled": false
    },
    {
      "groupName": "kubernetes packages (minor updates)",
      "groupSlug": "kubernetes-go-minor",
      "matchUpdateTypes": ["minor"],
      "matchDatasources": ["go"],
      "matchPackagePrefixes": ["k8s.io"],
      "enabled": true
    },
    {
      "groupName": "golang packages",
      "groupSlug": "go-golang",
      "matchDatasources": [
        "go"
      ]
    },
    {
      "matchBaseBranches": ["release/DOT"],
      "groupName": "all-updates",
      "groupSlug": "all-updates",
      "separateMajorMinor": false,
      "separateMinorPatch": false,
      "separateMultipleMajor": false,
      "separateMultipleMinor": false,
      "separateMultiplePatch": false
    }
  ]

}

