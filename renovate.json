
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    
    {"fileMatch": [
      "k8s/.+\\.yaml$",
      "crossplane-gcp-provider/.+/provider\\.yaml$"
    ],
    "matchStrings": [
      "^package: .*?:(?<currentValue>.*)? # repository=(?<depName>.*)$"
    ],
    "datasourceTemplate": "git-tags"
  }
  ]

}
