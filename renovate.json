{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "America/New_York",
  "separateMinorPatch": true,
  "baseBranches": [
    "main"
  ],
  "extends": ["config:recommended", ":dependencyDashboard", "group:allNonMajor"],
  "additionalBranchPrefix": "{{parentDir}}-",
  "regexManagers": [
    {
      "fileMatch": [
        "^cicd/dockerfiles/Dockerfile.test$"
      ],
      "matchStrings": [
          "# depName=(?<depName>.*?)\\n.*@(?<currentValue>.*?)\\n"

      ],
      "datasourceTemplate": "go"
    },
    {
      "fileMatch": ["^cicd/jenkinsfiles/Jenkinsfile.test$"],
      "matchStrings": [
        "// POD TEMPLATES\\n.*= \"nginx-(?<currentValue>\\d+\\.\\d+\\.x)\" // (?<depName>.*)\\n"
      ],
      "datasourceTemplate": "docker",
      "extractVersionTemplate": "nginx-(?<version>\\d+\\.\\d+\\.x)"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "matchDatasources": [
        "go"
      ],
      "groupName": "kubernetes packages",
      "groupSlug": "kubernetes-go",
      "matchPackagePrefixes": [
        "k8s.io"
      ],
      "enabled": false
    },
    {
      "groupName": "golang packages",
      "groupSlug": "go-golang",
      "matchDatasources": [
        "go"
      ]
    },
    {
      "matchDepTypes": ["toolchain"],
      "matchDatasources": ["golang-version"],
      "enabled": true,
      "groupName": "toolchain",
      "additionalBranchPrefix": ["toolchain-test"]
    }

  ]

}

