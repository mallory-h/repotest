
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    
    {"fileMatch": [
      "k8s/.+\\.yaml$",
      "crossplane-[a-zA-Z]*-provider/.+/provider\\.yaml$"
    ],
    "matchStrings": [
      "package: [^:]*:(?<currentValue>v\\d\\.\\d+\\.\\d+?) # repository=(?<depName>.*)"
    ],
    
    "matchStringsStrategy": "any",
    "datasourceTemplate": "git-tags"
  }
  ]

}
