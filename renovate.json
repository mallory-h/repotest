{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "America/New_York",
  "separateMinorPatch": true,
  "dockerfile": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": [
        "^cicd/dockerfiles/Dockerfile$"
      ],
      "matchStrings": [
        "GCOV2LCOV=(?<depName>.*?)@(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "go"
    }
]

}

