{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "America/New_York",
  "separateMinorPatch": true,
  "enabledMangers": ["dockerfile"],
  "baseBranches": [
    "main",
    "release/DOT"
  ],
  "extends": ["config:recommended", ":dependencyDashboard", "group:allNonMajor"],
  "additionalBranchPrefix": "{{parentDir}}-",
  "regexManagers": [
    {
      "fileMatch": [
        "^cicd/dockerfiles/Dockerfile.test$"
      ],
      "matchStrings": [
          "# depName=(?<depName>.*?)\\n.*@(?<currentValue>.*?)\\n"

      ],
      "datasourceTemplate": "go"
    }
  ],
  "packageRules": [
    {
      "matchBaseBranches": [
        "main"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "matchDatasources": [
        "go"
      ],
      "groupName": "kubernetes packages",
      "groupSlug": "kubernetes-go",
      "matchPackagePrefixes": [
        "k8s.io"
      ],
      "enabled": false
    },
    {
      "matchBaseBranches": [
        "main"
      ],
      "groupName": "kubernetes packages (minor updates)",
      "groupSlug": "kubernetes-go-minor",
      "matchUpdateTypes": ["minor"],
      "matchDatasources": ["go"],
      "matchPackagePrefixes": ["k8s.io"],
      "enabled": true
    },
    {
      "matchBaseBranches": [
        "main"
      ],
      "groupName": "golang packages",
      "groupSlug": "go-golang",
      "matchDatasources": [
        "go"
      ]
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchBaseBranches": ["release/DOT"]
    }

  ]

}

