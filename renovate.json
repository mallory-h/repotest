
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "kubernetes": {
    "fileMatch": [
      "k8s/.+\\.yaml$",
      "crossplane-gcp-provider/.+/provider\\.yaml$"
    ],
    "matchStrings": [
      "package: \"[A-Z]+:(?<currentValue>.*?) # repository=(?<depName>.*?)\\n"
    ],

    "datasourceTemplate": "git-tags"
  }

}
