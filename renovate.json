{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "America/New_York",
  "separateMinorPatch": true,
  "enabledMangers": ["dockerfile"],
  "baseBranches": [
    "main"
  ],
  "extends": ["config:recommended", ":dependencyDashboard", "group:allNonMajor"],
  "additionalBranchPrefix": "{{parentDir}}-",
  "regexManagers": [
    {
      "fileMatch": [
        "^cicd/dockerfiles/Dockerfile.test$"
      ],
      "matchStrings": [
          "# depName=(?<depName>.*?)\\n.*@(?<currentValue>.*?)\\n"

      ],
      "datasourceTemplate": "go"
    }
  ],
  "packageRules": [
    {
      "matchBaseBranches": [
        "main"
      ],
      "groupName": "golang packages",
      "groupSlug": "go-golang",
      "matchDatasources": [
        "go"
      ]
    },
      {
        "matchPackageNames": ["toolchain"],
        "matchDatasources": ["go"],
        "enabled": true,
        "groupName": "toolchain"
      }

  ]

}

