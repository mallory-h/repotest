{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "America/New_York",
  "separateMinorPatch": true,
  "regexManagers": [
    {
      "fileMatch": [
        "^Makefile$"
      ],
      "datasourceTemplate": "docker",
      "matchStrings": [
        "[A-Z]+_IMAGE=(?<depName>.*?):(?<currentValue>.*?)\\s"
      ]
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "fast-forward"
    }
  ],
  "extends": [
    "group:kubernetes"
  ]
}


{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    
    {"fileMatch": [
      "k8s/.+\\.yaml$",
      "crossplane-[a-zA-Z0-9]+-provider/.+/provider\\.yaml$"
    ],
    "matchStrings": [
      "package: [^:]*:(?<currentValue>v\\d\\.\\d+\\.\\d+?) # repository=(?<depName>.*)"
    ],
    
    "matchStringsStrategy": "any",
    "datasourceTemplate": "git-tags"
  }
  ]

}
